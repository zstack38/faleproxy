{
  "name": "faleproxy",
  "version": "1.0.0",
  "description": "A proxy that replaces 'Yale' with 'Fale' in web content",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "vercel-build": "echo 'Building for Vercel deployment'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage"
  },
  "engines": {
    "node": ">=18.x"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nock": "^13.5.6",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/public/script.js",
      "!jest.config.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/public/script.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 70,
        "branches": 35,
        "functions": 50,
        "lines": 70
      }
    }
  }
}
